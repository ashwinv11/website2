    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Ashwin Vaswani"
    / Fontello Icons
    = stylesheet_link_tag 'fontello', 'typography', async: true
    = javascript_include_tag 'ga.bundle', async: true
  %body{class: page_classes}
